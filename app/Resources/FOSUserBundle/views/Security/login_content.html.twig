{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="accueil">

        <div class="logoaccueil"><img src="{{ asset('assets/images/logo') }}.svg"></div>
        <div class="pagelog">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <p class="label"><label for="username">{{ 'security.login.username'|trans }}</label></p>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br>

                <p class="label"><label for="password">{{ 'security.login.password'|trans }}</label></p>
                <input type="password" id="password" name="_password" required="required" /><br>

                <p class="checkbox"><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /></p>


                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>
        </div>

</div>